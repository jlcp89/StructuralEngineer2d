<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IngresoElemento">

    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/relativeL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:gravity="center"
            >

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="3sp"
                android:background="@color/colorTexto"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3sp"
                    android:background="@color/colorFondo">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity=""
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="@string/ingresar_carga"
                        android:textColor="@color/colorBlanco"
                        android:textSize="25dp"
                        />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/linear1"
                android:layout_gravity="center_vertical"
                android:layout_margin="3sp"
                android:background="@color/colorTexto"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3sp"
                    android:background="@color/colorFondo">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_gravity=""
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="@string/ingreso_e"
                        android:textColor="@color/colorBlanco"
                        android:textSize="13dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:background="@color/colorBlanco"
                        android:gravity="center">

                        <Spinner
                            android:gravity="center"
                            android:layout_margin="2dp"
                            android:id="@+id/spinner_e"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/colorFondoSpinner"
                            android:textAlignment="center"/>


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/linear4"
                android:layout_gravity="center_vertical"
                android:layout_margin="3sp"
                android:background="@color/colorTexto"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3sp"
                    android:background="@color/colorFondo">f

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:background="@color/colorFondo"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_gravity=""
                                android:layout_margin="4dp"
                                android:gravity="center"
                                android:textColor="@color/colorAccent"
                                android:textSize="12dp"
                                android:src="@drawable/a2_1"
                                android:scaleType="fitCenter"
                                android:id="@+id/apoyo_2_1"/>
                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:layout_margin="4dp"
                                android:gravity="center"
                                android:textColor="@color/colorAccent"
                                android:textSize="12dp"
                                android:src="@drawable/a2_2"
                                android:scaleType="fitCenter"
                                android:id="@+id/apoyo_2_2"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_gravity=""
                                android:layout_margin="4dp"
                                android:gravity="center"
                                android:textColor="@color/colorAccent"
                                android:textSize="12dp"
                                android:src="@drawable/a2_3"
                                android:scaleType="fitCenter"
                                android:id="@+id/apoyo_2_3"/>
                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:layout_margin="4dp"
                                android:gravity="center"
                                android:textColor="@color/colorAccent"
                                android:textSize="12dp"
                                android:src="@drawable/a2_4"
                                android:scaleType="fitCenter"
                                android:id="@+id/apoyo_2_4"/>

                        </LinearLayout>








                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/linear2"
                android:layout_gravity="center_vertical"
                android:layout_margin="3sp"
                android:background="@color/colorTexto"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3sp"
                    android:background="@color/colorFondo">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_gravity=""
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="@string/ingreso_f_1"
                        android:textColor="@color/colorBlanco"
                        android:textSize="13dp"
                        android:id="@+id/textof"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:background="@color/colorFondo"
                        android:gravity="center">

                        <EditText
                            android:id="@+id/editF"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorBlanco"
                            android:gravity="center"
                            android:hint="@string/ingreso_nodo_cx_hint"
                            android:textColor="@color/colorFondo"
                            android:inputType="numberDecimal|numberSigned"/>


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear7"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/linear3"
                android:layout_gravity="center_vertical"
                android:layout_margin="3sp"
                android:background="@color/colorTexto"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3sp"
                    android:background="@color/colorFondo">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_gravity=""
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="@string/ingreso_a"
                        android:textColor="@color/colorBlanco"
                        android:textSize="13dp"
                        android:id="@+id/textoa"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:background="@color/colorFondo"
                        android:gravity="center">

                        <EditText
                            android:id="@+id/editA"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorBlanco"
                            android:gravity="center"
                            android:hint="@string/ingreso_nodo_cx_hint"
                            android:textColor="@color/colorFondo"
                            android:inputType="numberDecimal|numberSigned"/>


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_below="@+id/linear7"
                android:layout_gravity="center_vertical"
                android:layout_margin="3sp"
                android:background="@color/colorTexto"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3sp"
                    android:background="@color/colorFondo"
                    android:gravity="center">

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_gravity=""
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:text="@string/guardar_continuar"
                        android:textColor="@color/colorNegro"
                        android:textSize="12dp"
                        android:id="@+id/boton_guardar_seguir"/>

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_gravity=""
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:text="@string/agregar_otra_carga"
                        android:textColor="@color/colorNegro"
                        android:textSize="10dp"
                        android:id="@+id/boton_agregar_otra_carga"/>

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_gravity=""
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:text="@string/cancelar"
                        android:textColor="@color/colorNegro"
                        android:textSize="10dp"
                        android:id="@+id/boton_cancelar"/>


                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </ScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>